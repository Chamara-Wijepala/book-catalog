<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>

<body class="bg-slate-100 flex h-svh">
  <%- include('./partials/header.ejs') %>

  <main class="p-4 sm:p-8 overflow-scroll">
    <h2 class="mt-8 mb-4 text-4xl text-slate-400">Browse Books</h2>

    <div class="flex gap-8 flex-wrap justify-center sm:justify-start">
      <% books.map(book => { %>
      <div>
        <div class="bg-slate-400 w-[12rem] aspect-[1/1.5] flex justify-center items-center rounded-md">
          <% if (book.cover === null) { %>
          <p class="text-slate-800">Cover not available</p>
          <% } %>
        </div>
        <h3 class="font-bold mt-3"><%= book.title %></h3>
        <p class="text-slate-500"><%= book.first_name %> <%= book.last_name %></p>
      </div>
      <% }) %>
    </div>
  </main>
</body>

</html>