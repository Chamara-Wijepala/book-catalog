<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>

<body>
  <%- include('./partials/header.ejs') %>
  <main>
    <h2>Books</h2>

    <% books.map(book => { %>
    <div>
      <div>
        <% if (book.cover === null) { %>
        <p>Cover not available</p>
        <% } %>
      </div>
      <h3><%= book.title %></h3>
      <p><%= book.first_name %> <%= book.last_name %></p>
    </div>
    <% }) %>
  </main>
</body>

</html>