<button id="open-modal" class="absolute right-4 bottom-4 max-w-12">
  <img src="https://www.svgrepo.com/show/528832/add-circle.svg" class="bg-emerald-400 rounded-full p-2">
</button>

<div id="modal" class="fixed inset-0 bg-slate-950 bg-opacity-50 hidden">
  <div class="flex justify-center items-center min-h-full">
    <div class="bg-white py-10 px-8 m-4 rounded-lg flex flex-col relative">
      <button id="close-modal" class="absolute top-1 right-1">
        <img src="https://www.svgrepo.com/show/528912/close-circle.svg" class="max-w-8">
      </button>

      <form method="POST" class="flex flex-col gap-4">
        <%- include('./' + partial) %>

        <button type="submit" class="bg-emerald-400 py-2 px-4 mt-4 text-slate-950 rounded-md">
          Add
        </button>
      </form>

    </div>
  </div>
</div>

<script>
  const modal = document.getElementById('modal');
  const openModalBtn = document.getElementById('open-modal');
  const closeModalBtn = document.getElementById('close-modal');

  openModalBtn.addEventListener('click', () => {
    modal.classList.remove('hidden')
    modal.classList.add('block')
  })

  closeModalBtn.addEventListener('click', () => {
    modal.classList.remove('block')
    modal.classList.add('hidden')
  })
</script>